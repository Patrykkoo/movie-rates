<!-- views/add-movie.ejs -->
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Dodaj nowy film</h1>
        <p>Wypełnij poniższe pola, aby dodać film do swojej kolekcji</p>
    </header>
    <main>
        <form class="add-movie-form" action="/add-movie" method="POST">
            <div class="form-control"><label for="title">Tytuł</label><input type="text" id="title" name="title" required></div>
            <div class="form-control"><label for="director">Reżyser</label><input type="text" id="director" name="director" required></div>
            <div class="form-control"><label for="year">Rok premiery</label><input type="number" id="year" name="year" min="1888" max="2099" step="1" required></div>
            <div class="form-control"><label for="posterUrl">URL do plakatu</label><input type="url" id="posterUrl" name="posterUrl"></div>
            <div class="form-control"><label for="plot">Krótki opis fabuły</label><textarea id="plot" name="plot" rows="4"></textarea></div>
            
            <!-- NOWE POLA -->
            <div class="form-control">
                <label for="status">Status</label>
                <select name="status" id="status">
                    <option value="Do obejrzenia" selected>Do obejrzenia</option>
                    <option value="W trakcie">W trakcie</option>
                    <option value="Obejrzany">Obejrzany</option>
                </select>
            </div>
            <div class="form-control">
                <label for="rating">Ocena (1-10)</label>
                <input type="number" name="rating" id="rating" min="1" max="10">
            </div>
            <div class="form-control">
                <label for="review">Recenzja</label>
                <textarea name="review" id="review" rows="3"></textarea>
            </div>

            <button type="submit" class="btn">Dodaj Film</button>
        </form>
    </main>
    <footer>
        <p>&copy; 2025 Movierates</p>
    </footer>
</body>
</html>